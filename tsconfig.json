{
	"compilerOptions": {
		"lib": [
			"DOM",
			"ESNext"
		],
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"outDir": "dist",
		"rootDir": "src",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts"
	],
	"exclude": [
		"**/*.test.ts"
	]
}