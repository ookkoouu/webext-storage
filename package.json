{
	"name": "@okou/webext-storage",
	"description": "A library of Web-Extension Storage with inter context sync, collections, hooks, etc.",
	"version": "2.0.4",
	"author": "okou",
	"license": "MIT-0",
	"type": "module",
	"scripts": {
		"build": "tsup",
		"typecheck": "tsc --noEmit",
		"style": "biome check --apply src",
		"commit": "cz",
		"prepack": "run-p typecheck build",
		"test": "vitest run",
		"test:watch": "vitest"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"publishConfig": {
		"access": "public"
	},
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"require": "./dist/index.cjs",
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		},
		"./react": {
			"require": "./dist/react/index.cjs",
			"import": "./dist/react/index.js",
			"types": "./dist/react/index.d.ts"
		}
	},
	"files": [
		"dist"
	],
	"keywords": [
		"webext",
		"browser-extension",
		"chrome",
		"storage",
		"hooks"
	],
	"repository": "github:ookkoouu/webext-storage",
	"devDependencies": {
		"@biomejs/biome": "^1.5.3",
		"@types/react": "^18.2.60",
		"@types/webextension-polyfill": "^0.10.7",
		"@webext-core/fake-browser": "^1.3.1",
		"commitizen": "^4.3.0",
		"lefthook": "^1.6.4",
		"npm-run-all2": "^6.1.2",
		"prettier": "^3.2.5",
		"tsup": "^8.0.2",
		"typescript": "^5.3.3",
		"vitest": "^1.3.1",
		"webextension-polyfill": "^0.10.0"
	},
	"dependencies": {
		"fast-deep-equal": "^3.1.3",
		"nanoid": "^5.0.6",
		"react": "^18.2.0"
	}
}
